<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="main">
      <!-- <div class="menu-toggle">
        <div class="menu"><i class="ri-menu-fold-4-fill"></i></div>
        <div class="nav-list">
          <a href=""><li>Home</li></a>
          <a href=""><li>Logout</li></a>
        </div>
      </div> -->

      <div class="logout">
        <a href="/logout"><button>Logout</button></a>
      </div>
      <div class="nav-bar">
        <div class="user">
           <!-- Logo -->
          <div class="profile-info">
            <div class="uname">VIEW INFORMATION</div>
            <div class="user-others">Colony in ward <%= wardNumber %></div>
          </div>
        </div>
        <div class="menu" style="display: none;"><i class="ri-menu-unfold-4-line"></i></div>
      </div>

      <div class="content-area ward-list" translate="no">

        <div class="list-group" translate="no">
          <% if (colonyData.length === 0) { %>
            <div style="display: flex; justify-content: center; align-items: center; font-size: 5vw;">कोई डाटा उपलब्ध नहीं है | </div>
          <% } else { %>
            <% colonyData.forEach((colony) => { %>
             <a href="/info/innerform/<%=colony._id%>">
              <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= colony.colonyName %></h5>
                  <small style="display: block; text-align: center;">
                    <%= ("0" + new Date(colony.createdAt).getHours()).slice(-2) + ":" + ("0" + new Date(colony.createdAt).getMinutes()).slice(-2) %>
                  </small>
                </div>
                <p class="mb-1"><%= colony.mohalla %></p>
                <div class="box">
                  <small><%= colony.landmark %></small>
                  <!-- <a href="/delete/colony/<%= colony._id %>/<%= colony.ward %>">
                    <button><i class="ri-delete-bin-6-fill"></i></button>
                  </a> -->
                </div>
              </div>
             </a>
            <% }) %>
          <% } %>
          
          </div>


      
        </div>
       
         
        </div>
      </div>
    </div>

</body> 
<%- include('../Partials/nabBottom') %>

